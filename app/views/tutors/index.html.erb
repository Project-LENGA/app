<h1>Tutors list</h1>

<table style="width: 100%; border: 1px solid;">
  <thead>
    <tr>
      <td>Name</td>
      <td>Email</td>
      <td>Reserve</td>
    </tr>
  </thead>

  <tbody>
    <% @tutors.each do |t| %>
      <tr>
        <td> <%= t.name %> </td>
        <td> <%= t.email %> </td>
        <td> <%= link_to 'Reserve Lesson', new_student_lesson_path(tutor_id: t.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
